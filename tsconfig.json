{
  "compilerOptions": {
    "lib": ["es2021"],
      "module": "commonjs",
      "target": "es2021",

      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "paths": {
        "@/*": ["src/*"]
      }
  },
  // "include": ["src/**/*"],
  // "exclude": ["node_modules", "**/*.spec.ts"]
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
