{
  "compilerOptions": {
    "lib": ["es2022"],
    "target": "es2021",
    "declaration": true,

    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true
    // "exactOptionalPropertyTypes": true,
  },
  // "include": ["src/**/*"],
  // "exclude": ["node_modules", "**/*.spec.ts"]
}
